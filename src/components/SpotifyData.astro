---
import data from '../data.json';
const playListsLinks = data['home']['spotify']['playlists'];
---

<div class="mx-auto w-full mt-10" id="spotify-section">
  <div
    class="mx-auto grid h-auto grid-cols-1 justify-items-center gap-10 p-10"
    id="spotify_card"
  >
    {
      playListsLinks.map((value) => (
        <div class="w-full flex lg:flex-row items-center gap-10 flex-col-reverse">
          <iframe
            style="border-radius:12px"
            src={value.src}
            width="100%"
            height="352"
            allowfullscreen=""
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
          />
          <div class="w-full flex flex-col gap-10">
            <h5 class="text-center lg:text-left">{value.title}</h5>
            <p class="texter-center lg:text-left">{value.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  #spotify-section {
    margin-top: 3rem;
  }
  #spotify_card {
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    padding: 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
  }
</style>
