---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
  title="My Blog | Jefferson Espinoza"
  description="Learn about Jefferson Espinoza's most recent posts"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="Blog"
        tagline="My personal collection of code snippets, starter guides, tutorials and interesting things I found online. I hope you find something useful here."
        align="start"
      />
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
